{
  "appId": "com.Cortez.app",
  "productName": "Cortez",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "!**/*.map",
    "!**/*.d.ts",
    "!**/node_modules/.cache/**",
    "!**/node_modules/.vite/**"
  ],
  "extraResources": [
    {
      "from": "../back-end/dist",
      "to": "backend/"
    },
    {
      "from": "../back-end/node_modules",
      "to": "backend/node_modules",
      "filter": ["**/*", "!.cache/**", "!.package-lock.json"]
    },
    {
      "from": "build",
      "to": "build",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "include": "build/installer.nsh",
    "warningsAsErrors": false,
    "differentialPackage": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "menuCategory": "Cortez",
    "installerIcon": "public/icon.ico",
    "uninstallerIcon": "public/icon.ico"
  },
  "compression": "store",
  "asar": true,
  "asarUnpack": [
    "**/*.node",
    "**/node_modules/sharp/**/*",
    "**/node_modules/@img/**/*"
  ],
  "removePackageScripts": true,
  "npmRebuild": false,
  "nodeGypRebuild": false,
  "buildDependenciesFromSource": false
}